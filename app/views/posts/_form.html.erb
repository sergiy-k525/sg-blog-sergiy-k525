<section class="col-xs-offset-2 col-xs-8">
  <%= form_for @post do |post| %>
    <div class="form-group">
      <div class="text-center">
        <%= post.label "Title of your post" %>
        <%= post.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="text-center">
        <%= post.label "Your post itself" %>
      </div>
      <%= post.text_area :body, class: "form-control", rows: "15" %>
    </div>

    <div class="text-center">
      <%= button_tag(type: 'submit', class: "btn btn-lg btn-warning") do %>
        Make'em read!
      <% end %>
    </div>
  <% end %>
</section>
