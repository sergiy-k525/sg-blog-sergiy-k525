<div class="row">
  <div class="col-xs-offset-4 col-xs-4 col-sm-offset-0 col-sm-12">
    <div class="list-header text-center">
      <h1>Top Posts</h1>
      <p class="lead">(click on post for further reading)</p>
    </div>
    <% if signed_in? %>
    <div class="text-center" id="new-post-button">
      <%= button_to "New Post", new_post_path, method: :get, class: "btn btn-success btn-large navbar-btn" %>
    </div>
    <% end %>
    <div class="list-group">
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id), class: "list-group-item" do %>
          <h4 class="list-group-item-heading"><%= post.title %></h4>
          <p class="list-group-item-text"><%= limited_posts_body(post.body) %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
