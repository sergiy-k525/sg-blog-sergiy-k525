<div class="row">
  <div class="col-xs-offset-4 col-xs-4 col-sm-offset-0 col-sm-12">
    <div class="list-header text-center">

    <div class="list-group">
      <% @users.each do |user| %>
        <%= link_to user_path(user.id), class: "list-group-item" do %>
        
          <h4 class="list-group-item-heading"><%= user.name %></h4>
          <p class="list-group-item-text"><%= user.email %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
